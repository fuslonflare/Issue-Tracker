<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_issue_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issue ID: 1412" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_issue_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name: NOSTRA Logistics Version 2" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_issue_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: InProgress" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_issue_assign_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assign To: Sukrit Seeta" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_issue_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: Fix Advance Report" />

    <ListView
        android:id="@+id/list_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>