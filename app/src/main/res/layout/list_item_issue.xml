<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:id="@+id/text_issue"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1412" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:id="@+id/text_product_name"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="NOSTRA Logistics V.2" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:id="@+id/text_description"
        android:text="SomeDescriptionSomeDescriptionSomeDescriptionSomeDescriptionSomeDescriptionSomeDescriptionSomeDescriptionSomeDescriptionSomeDescription" />

</LinearLayout>